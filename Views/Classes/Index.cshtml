@model IEnumerable<SchoolApplicationCrud.Models.Classes>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Class_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class_Section)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Class_Name)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class_Section)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Class_Name">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Class_Name">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Class_Name">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
